  <%= link_to("Contact", contact_path, id:"linkie_contact") %>

  <% if user_signed_in? %>
  <%= link_to("Sign out", destroy_user_session_path, method: :delete, id:"linkie_signin") %>
  <% else %>
  <%= link_to("Sign In", new_user_session_path, id:"linkie_signin") %>
  <% end %>
