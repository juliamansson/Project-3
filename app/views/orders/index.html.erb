<div id="order_index">
<h1>Your Cupcake Creations</h1>

<table>
  <thead>
    <tr>
    
      <th>Cupcake</th>
      <th>Quantity</th>
      <th>Status</th>
      
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= image_tag order.image_name, id: :image_cupcake %></td>
        <td><%= order.quantity %></td>
        <% if order.placed?  %>
        <td>Purchased</td>
        <% else %>
        <td>Not Ordered</td>
        <% end %>

        <td><%= link_to 'Show', order %></td>

        <!-- <td><%#= link_to 'Edit', edit_order_path(order) %></td> -->
        
        <td><%= link_to 'Remove', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>



<div id="new_cupcake"><%= link_to 'New Cupcake', new_order_path %></div>

