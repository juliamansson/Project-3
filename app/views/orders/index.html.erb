<h1>Your Cupcake Creations</h1>

<table>
  <thead>
    <tr>
      <th>Base</th>
      <th>Frosting</th>
      <th>Topping</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.customisation_display(:base) %></td>
        <td><%= order.customisation_display(:frosting) %></td>
        <td><%= order.customisation_display(:topping) %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_order_path %>
