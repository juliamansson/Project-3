<%= form_for@order, :html=> {:id => 'msform'} do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <!-- multistep form -->
  <!-- <form id="msform"> -->
    <!-- progressbar -->
    <ul id="progressbar">
      <li class="active">Cake Base</li>
      <li>Frosting</li>
      <li>Topping</li>
    </ul>
    <!-- fieldsets -->
    <%= f.fields_for :customisations do |i| %>
      <fieldset>
        <h2 class="fs-title">Choose a cake <%=i.object.section.try :name %></h2>
        
        <!-- <h3 class="fs-subtitle">Step 1 of 3</h3> -->
        
        <%#= i.object.section.try :name %>
        <%= i.label :flavour_id %>
        <%= i.hidden_field :section_id %>  
        <%= i.collection_select :flavour_id, i.object.section.flavours, :id, :name  %>

        <% if i.object.section.name != "Base" %>
          <input type="button" name="previous" class="previous action-button" value="Previous" />
          <% end %>
        <% if i.object.section.name == "Topping" %>
          <p><%= f.submit "View Cupcake" %></p>
        <% end %>
        <% if i.object.section.name != "Topping" %>
          <input type="button" name="next" class="next action-button" value="Next" />
        <% end %>
      </fieldset>
    <% end %>

  </form>
<!--  -->
  
      <!--  -->



  <!-- jQuery -->
  <script src="http://thecodeplayer.com/uploads/js/jquery-1.9.1.min.js" type="text/javascript"></script>
  <!-- jQuery easing plugin -->
  <script src="http://thecodeplayer.com/uploads/js/jquery.easing.min.js" type="text/javascript"></script>
 

  <div class="actions">
    <p><%= f.submit "Continue" %></p>
  </div>

  <%#= render "#{@order.current_step}", :f => f %>
  <%#= render 'base', :f => f %>
  <%#= render 'frosting', :f => f %>
  <%#= render 'topping', :f => f %>

 


<% end %>

