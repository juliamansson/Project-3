<br>
  <% end %>


  <%#= render "#{@order.current_step}", :f => f %>
  <%#= render 'base', :f => f %>
  <%#= render 'frosting', :f => f %>
  <%#= render 'topping', :f => f %>

  <div class="actions">
    <p><%= f.submit "Continue" %></p>
